<%- include('includes/head.ejs') %>

<link rel="stylesheet" href="/css/user.css">
</head>

<body>

    <%- include('includes/navigation.ejs') %>

    <main>
        <% if(users.length > 0) { %>
            <div class="grid"> 
                <% for (let user of users) { %>
                    <article class="card user-item">
                        <header class="card__header">
                            <h1 class="user__title"><%= user.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="https://cdn.pixabay.com/photo/2018/03/10/09/46/business-3213661__340.jpg" alt="A Man">
                        </div>
                        <div class="card__content">
                            <h2 class="user__price">Origin2020</h2>
                            <p class="user__description">Some paragraph introduction about yourself and most importantly, about you interests in our platform!</p>
                        </div>
                        <div class="card__actions">
                            <button class="btn">Add to Cart</button>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No users Found
        <% } %>
    </main>

<%- include('includes/end.ejs') %>
